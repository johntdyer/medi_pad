<style type="text/css">
  #vertmenu {
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-size: 250%;
    width: 280px;
    padding: 20px;
    margin: 20px;
  }

  #vertmenu h1 {
    display: block;
    background-color:#FF9900;
    font-size: 110%;
    padding: 3px 0 5px 3px;
    border: 1px solid #000000;
    color: #333333;
    margin: 0px;
    width:280px;
  }

  #vertmenu ul {
    list-style: none;
    margin: 0px;
    padding: 0px;
    border: none;
  }
  #vertmenu ul li {
    margin: 0px;
    padding: 0px;
  }
  #vertmenu ul li a {
    font-size: 120%;
    display: block;
    border-bottom: 1px dashed #C39C4E;
    padding: 5px 0px 2px 4px;
    text-decoration: none;
    color: #666666;
    width:280px;
  }

  #vertmenu ul li a:hover, #vertmenu ul li a:focus {
    color: #000000;
    background-color: #eeeeee;
  }
</style>

<div id="vertmenu">
<h1>Edit</h1>

<ul>
	  <% if current_user %>
     <li> <%= link_to "Home", :controller => "home", :action => "index"%> </li>
     <li> <%= link_to "Logout", '/users/sign_out' %></li>
     <li><%= link_to "Procedures", procedures_path %></td></li>
   	 <li><%= link_to 'Add doctor', new_user_registration_path %></li>
    <% else %>
      <li><%= link_to "Login", login_path%></li>
      <li><%= link_to "Home", :controller => "home", :action => "index"%></li>
      
   <%end%> 
      <%= form_tag( {:action => 'upload'}, {:multipart => true} ) do -%>
        <li>
          <%= file_field_tag "xml_file" %></li>
         <li> <%= submit_tag "Import" %></li>
        <% end -%>
    </ul>
</div>

<%= stylesheet_link_tag 'table' %>

<% if !flash.empty? %>
   <table border="0" width="">
     <caption> Patient Import </caption>
     <thead>
       <tr>
         <th>Successes</th>
       </tr>
     </thead>
     <% if flash[:notice].empty? %>
      <tr>
        <td>
          <font color="red">none</font>
        </td>
      </tr>
     <%else%>
      <% flash[:notice].each do |msg| %>  
            <tr>
              <td><%= msg %></td>
            </tr>
      <% end %>
   </table>
   <%end%>
   <% if flash[:error].empty? %>
     <tr>
       <td>
         <font color="red">none</font>
       </td>
     </tr>
    <%else%>
   <table border="0" width="">
     <thead>
       <tr>
         <th>Failures</th>
       </tr>
     </thead>
     <% flash[:error].each do |msg| %>  
      <tr>
        <td><%= msg %></td>
      </tr>
      <% end %>
      </tr>
   </table>
   <%end%>
<%end%>                 

<%= render :partial=>"user",  :locals=>{:users=>User.where(:validated=>false)}%>
