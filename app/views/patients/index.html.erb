<>
<table class='stripeMe'>
  <caption>Patients</caption>
  
  <thead>
    <tr class='odd'>
    <th>Facility</th>
    <th>Location</th>
    <th>Patient</th>

  <!--
    <th>Bed</th>
    <th>Unit</th>
    <th>Addmitted</th>
    <th>A / S</th>
    <th>Sex</th>
    <th>Mrn</th>
    <th>Fin</th>
    -->
    <th>Attending</th>
    <th>Seen</th>
    <th></th>
  </tr>
  </thead>
  <% @patients.each do |patient| %>
  <tr>
    <td><%=h patient.facility %></td>
    <td><%=h patient.room %></td>
    <!--
    <td><%=h patient.bed %></td>
    <td><%=h patient.unit %></td>
    <td><%=h patient.admitted %></td>
    -->
    <td><%=h patient.patient_name %></td>
    <!--
    <td><%=h patient.age %> / <%=h patient.sex %></td>
    <td><%=h patient.mrn %></td>
    <td><%=h patient.fin %></td>
    -->
    <td><%=get_lastname(patient.attending_md) %></td>
    <td><%= been_seen(patient) %></td>

    <!--
    <td><%=h patient.consult_md %></td>
    -->

    <td>

      <table id="inner_table" border="0" cellspacing="0">
            <td id="inner_table"><%= link_to image_tag("find.png", :border=>0), patient %></td>
            <td id="inner_table"><%= link_to image_tag("edit.png", :border=>0), edit_patient_path(patient) %></td>
            <td id="inner_table"><%= link_to image_tag("delete.png", :border=>0),patient, :confirm => 'Are you sure?', :method => :delete %></td>
      </table>
    </td>
  </tr>
<% end %>
</table>

