<style type="text/css" media="screen">
select.style01 {border:0px solid #A5A5A5; backgorund-color:#D0D0D0}
select.style01 option {border-bottom:1px solid #dadada; width:10px;}
</style>

<% content_for(:head) do %>
  <%= javascript_include_tag 'fancy-form-prototype' %>
  <%= javascript_include_tag :defaults %>
<% end %>

<%= stylesheet_link_tag 'checkbox' %>

<body>
  <% form_tag add_charges_path, :method => :put do %>
      <% @procedure_list = Procedure.find(:all) %>
      <%= hidden_field_tag :patient_id,charge.patient_id%>
      
        <table>
            <% @procedure_list.in_groups_of(4,false) do |procedure| %>  
            <tr>  
              <% procedure.each do |p| %>  
              <td>
                <label class='checkbox'>
                  <%= check_box_tag "procedure_ids[]", p.procedure_code %>
                  <%= p.procedure_name %>  
                </label>
              </td>  
              <% end %>  
            </tr>  
            <% end %>  

            <tr>
              <td>
                <%= select :charge,:doctor,Doctor.find(:all).collect{|p| [p.doctor_name]}%>
                <%= submit_tag 'Add' %>
              </td>
            </tr>
          </table>
  <% end %>
  
   <script type="text/javascript">
    Event.observe(window, 'load', function() {
        FancyForm.start();
      });
    </script>