  <caption>Editing Charge</caption>
  <thead>
    <tr class='odd'>
    <th></th>
    <th>Note Required?</th>
  </tr>
</thead>
<% form_for(@charge) do |f| %>
  <%= f.error_messages %>
  <tbody>
  <tr>
    <td>Procedure Name</td>
    <td><%= f.text_field :procedure_name %></td>
  </tr>  
  <tr>
    <td>Procedure Code</td>
    <td><%= f.text_field :procedure_code %></td>
  </tr>
  <tr>
    <td>Doctor</td>
    <td><%= f.text_field :doctor %></td>
  </tr> 
  <tr>
    <td>Patient ID</td>
    <td><%= f.text_field :patient_id %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit 'Update' %></td>
  </tr>

   </table>
  </tbody>
<% end %>

