<% form_tag( {:action => 'upload'}, {:multipart => true} ) do -%>
<p>
  <label for="file">File:</label><%= file_field_tag "xml_file" %><br/>
  <%= submit_tag "Parse with Hpricot" %>
</p>

<% end -%>
<%= stylesheet_link_tag 'table' %>

<% if !flash.empty? %>
   <table border="0" width="">
     <caption> Patient Import </caption>
     <thead>
       <tr>
         <th>Successes</th>
       </tr>
     </thead>
     <% if flash[:notice].empty? %>
      <tr>
        <td>
          <font color="red">none</font>
        </td>
      </tr>
     <%else%>
      <% flash[:notice].each do |msg| %>  
            <tr>
              <td><%= msg %></td>
            </tr>
      <% end %>
   </table>
   <%end%>
   <% if flash[:error].empty? %>
     <tr>
       <td>
         <font color="red">none</font>
       </td>
     </tr>
    <%else%>
   <table border="0" width="">
     <thead>
       <tr>
         <th>Failures</th>
       </tr>
     </thead>
     <% flash[:error].each do |msg| %>  
      <tr>
        <td><%= msg %></td>
      </tr>
      <% end %>
      </tr>
   </table>
   <%end%>
<%end%>